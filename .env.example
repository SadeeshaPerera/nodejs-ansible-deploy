# Application Environment
NODE_ENV=production
PORT=3000

# Application Configuration
APP_NAME=nodejs-ansible-deploy
APP_VERSION=1.0.0
APP_DESCRIPTION="Advanced Node.js application with Ansible deployment"

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
API_KEY=your-api-key-here
BCRYPT_ROUNDS=12

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nodejs-ansible-deploy
MONGODB_OPTIONS={"useNewUrlParser":true,"useUnifiedTopology":true}

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_DESTINATION=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# Monitoring & Metrics
METRICS_ENABLED=true
METRICS_PATH=/metrics
PROMETHEUS_PORT=9090

# Email Configuration (if needed)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# External Services
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
NOTIFICATION_ENABLED=true

# Performance
MAX_OLD_SPACE_SIZE=1024
UV_THREADPOOL_SIZE=4

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# SSL/TLS (if using HTTPS)
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_CA_PATH=

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_NAME=nodejs-ansible-deploy-session
SESSION_MAX_AGE=86400000

# Feature Flags
FEATURE_WEBSOCKET_ENABLED=true
FEATURE_FILE_UPLOAD_ENABLED=true
FEATURE_METRICS_ENABLED=true
FEATURE_RATE_LIMITING_ENABLED=true

# Development
DEBUG=app:*
WATCH_FILES=true
HOT_RELOAD=false
